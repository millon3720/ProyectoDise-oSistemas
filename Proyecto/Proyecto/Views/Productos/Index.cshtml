@model IEnumerable<Proyecto.Models.Productos>

@{
    ViewData["Title"] = "Productos";
    int contador = 0;
    
}

<h1>Productos</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Agregar</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="table-dark table-primary">
            <th>
                Codigo Producto
            </th>
            <th>
                Nombre
            </th>
            <th>
                Descripcion
            </th>
            <th>
                Presentacion
            </th>
            <th>
                Cantidad Presentacion
            </th>
            <th>
                Tipo Empaque
            </th>
            <th>
                Cantidad Empaque
            </th>
            <th>
                Precio
            </th>
            <th></th>
        </trc>
    </thead>
    <tbody>
@foreach (var item in Model) {
            @if (contador>0)
            {
                contador = 0;
                <tr class="table-secondary">
                    <td>
                        @Html.DisplayFor(modelItem => item.IdProductos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Presentacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CantidadPresentacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoEmpaque)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CantidadEmpaque)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning"  asp-route-id="@item.IdProductos">Editar</a> |
                        <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdProductos">Detalles</a> |
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdProductos">Eliminar</a>
                    </td>
                </tr>
            }
            else
            {
                contador++;
                <tr class="table-light">
                    <td>
                        @Html.DisplayFor(modelItem => item.IdProductos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Presentacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CantidadPresentacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoEmpaque)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CantidadEmpaque)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdProductos">Editar</a> |
                        <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdProductos">Detalles</a> |
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdProductos">Eliminar</a>
                    </td>
                </tr>
            }
            

}
    </tbody>
</table>

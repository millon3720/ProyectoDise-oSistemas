}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="table-dark table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Nombre)

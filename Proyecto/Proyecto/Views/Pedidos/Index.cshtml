@model IEnumerable<Proyecto.Models.Pedidos>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    int contador = 0;

    ViewData["Title"] = "Index";
}

<h1>Pedidos</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Pedido</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="table-dark table-primary">
            <th>
                Codigo Pedido
            </th>
            <th>
                Proveedor
            </th>
            <th>
                Fecha
            </th>
            <th>
                Encargado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            @if (contador > 0)
            {
                contador = 0;
                <tr class="table-secondary">
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPedidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdProveedores)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdUsuario)
                    </td>
                        <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdUsuario">Detalles</a>     
                        {
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdUsuario">Editar</a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdUsuario">Eliminar</a>
                        }
                </tr>
            }
            else
            {
                contador++;
                <tr class="table-light">
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPedidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdProveedores)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdUsuario)
                    </td>
                    <td>
                        <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdUsuario">Detalles</a>                       
                        {
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdUsuario">Editar</a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdUsuario">Eliminar</a>
                        }
                    </td>
                </tr>
            }
        }


    </tbody>

</table>

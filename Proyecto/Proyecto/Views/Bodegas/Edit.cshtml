@model Proyecto.Models.Bodegas

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Bodegas</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdBodegas" />
            <div class="form-group">
                <label asp-for="IdProvincia" class="control-label">Provincia</label>
                <select asp-for="IdProvincia" class="form-control" asp-items="ViewBag.IdProvincia"></select>
                <span asp-validation-for="IdProvincia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCanton" class="control-label">Canton</label>
                <select asp-for="IdCanton" class="form-control" asp-items="ViewBag.IdCanton"></select>
                <span asp-validation-for="IdCanton" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDistrito" class="control-label">Distrito</label>
                <select asp-for="IdDistrito" class="form-control" asp-items="ViewBag.IdDistrito"></select>
                <span asp-validation-for="IdDistrito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DireccionExacta" class="control-label">Direccion Exacta</label>
                <input asp-for="DireccionExacta" class="form-control" />
                <span asp-validation-for="DireccionExacta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Distrito" class="control-label">Encargado</label>
                <select asp-for="IdDistrito" class="form-control" asp-items="ViewBag.IdDistrito"></select>
                <span asp-validation-for="IdDistrito" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model Proyecto.Models.Bodegas

@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Detalles de Bodega a Eliminar</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                Codigo Bodega:
            </dt>
            <dd class="col-sm-8">
                Texto
            </dd>
            <dt class="col-sm-4">
                Codigo Provincia:
            </dt>
            <dd class="col-sm-8">
                 Texto
            </dd>
            <dt class="col-sm-4">
                Codigo Canton:
            </dt>
            <dd class="col-sm-8">
                Texto
            </dd>
            <dt class="col-sm-4">
                Codigo Distrito:
            </dt>
            <dd class="col-sm-8">
                Texto
            </dd>
            <dt class="col-sm-4">
                Direccion Exacta: 
            </dt>
            <dd class="col-sm-8">
                Texto
            </dd>
            <dt class="col-sm-4">
                Encargado:
            </dt>
            <dd class="col-sm-8">
                Texto
            </dd>
        </dl>
    
   <form asp-action="Delete">
            <input type="hidden" asp-for="IdBodegas" />
            <div class="form-group row justify-content-end">
                <div class="col-sm-10">
                    
                    <input type="submit" value="Eliminar" class="btn btn-danger float-right" /> 
                </div>
            </div>
        </form>
    </div>    
      
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>
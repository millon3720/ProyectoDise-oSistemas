@model Proyecto.Models.Bodegas

@{
    ViewData["Title"] = "Details";
    
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Bodegas</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Provincia)
        </dt>
        <dd class = "col-sm-8">
               Alajuela
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Canton)
        </dt>
        <dd class = "col-sm-8">
                San Carlos
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Distrito)
        </dt>
        <dd class = "col-sm-8">
                Aguas Zarcas
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.DireccionExacta)
        </dt>
        <dd class = "col-sm-8">
                200 metros este de la plaza comunal
        </dd>
     </dl>
    </div>
</div>

<br />
<hr />

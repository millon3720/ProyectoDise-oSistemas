@model IEnumerable<Proyecto.Models.Bodegas>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    int contador = 0;
    string Rol = HttpContextAccessor.HttpContext.Session.GetString("Puesto");

    ViewData["Title"] = "Index";

}
<h1>Bodegas</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr class ="table-dark table-primary">
            <th>
                Numero Bodega
            </th>
            <th>
                Nombre Bodega
            </th>
            <th>
                Provincia
            </th>
            <th>
                Canton
            </th>
            <th>
                Distrito
            </th>
            <th>
                Direccion Exacta
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody      
      @foreach (var item in Model) 
      {
                @if (contador > 0)
                {
                    contador = 0;
                    <tr class ="table-secondary">
                        <td>
                    @Html.DisplayFor(modelItem => item.IdBodegas)
                        </td>
                        <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                         </td>
                        <td>
                    @Html.DisplayFor(modelItem => item.Canton.Nombre)
                        </td>
                        <td>
                    @Html.DisplayFor(modelItem => item.Distrito.Nombre)
                        </td>
                        <td>
                    @Html.DisplayFor(modelItem => item.DireccionExacta)
                        </td>
                        <td>
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdBodegas">Editar</a> |
                            <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdBodegas">Detalles</a> |
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdBodegas">Eliminar</a>
                        </td>
                    </tr>
                }
                else
                {
                    contador ++;
                    <tr class="table-light">
                                <td>
                    @Html.DisplayFor(modelItem => item.IdBodegas)
                                </td>
                                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                                 </td>
                                <td>
                    @Html.DisplayFor(modelItem => item.Canton.Nombre)
                                </td>
                                <td>
                    @Html.DisplayFor(modelItem => item.Distrito.Nombre)
                                </td>
                                <td>
                    @Html.DisplayFor(modelItem => item.DireccionExacta)
                                </td>
                        <td>
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdBodegas">Editar</a> |
                            <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdBodegas">Detalles</a> |
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdBodegas">Eliminar</a>
                        </td>
                    </tr>

                }
      }
    </tbody>
</table>

@model Proyecto.Models.Usuarios

@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    string Rol = HttpContextAccessor.HttpContext.Session.GetString("Puesto");
    int contador = 0;
    ViewData["Title"] = "Details";
}


<div class="card">
    <div class="card-body">
        <h4 class="card-title">Usuarios</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                Cedula
            </dt>
            <dd class="col-sm-8">
                @Model.Cedula
            </dd>
            <dt class="col-sm-4">
                Nombre
            </dt>
            <dd class="col-sm-8">
                @Model.Nombre
            </dd>
            <dt class="col-sm-4">
                Apellidos
            </dt>
            <dd class="col-sm-8">
                @Model.Apellidos
            </dd>
            <dt class="col-sm-4">
                Telefono
            </dt>
            <dd class="col-sm-8">
                @Model.Telefono
            </dd>
            <dt class="col-sm-4">
                Puesto
            </dt>
            <dd class="col-sm-8">
                @Model.Puesto
            </dd>
            <dt class="col-sm-4">
                Bodega
            </dt>
            <dd class="col-sm-8">
                @Model.IdBodega
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model?.IdUsuario">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary ml-2">Volver a la Lista</a>
</div>
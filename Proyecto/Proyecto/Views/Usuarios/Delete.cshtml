@model Proyecto.Models.Usuarios

@{
    ViewData["Title"] = "Delete";
}

@* <h1 class="text-center">Eliminar</h1> *@

<h3 class="text-center">¿Esta seguro que desea eliminar este usuario?</h3>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Usuarios</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Cedula)
            </dt>
            <dd class="col-sm-8">
                123456789
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-8">
                Luis
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Apellidos)
            </dt>
            <dd class="col-sm-8">
                Rodriguez Zeledón
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Telefono)
            </dt>
            <dd class="col-sm-8">
                3333-3333
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Puesto)
            </dt>
            <dd class="col-sm-8">
                Gondolero
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.IdBodegas)
            </dt>
            <dd class="col-sm-8">
                Bodega 1
            </dd>
		</dl> 
        <form asp-action="Delete">
			<input type="hidden" asp-for="Cedula" />
			<div class="form-group row justify-content-end">
				<div class="col-sm-10">
					<input type="submit" value="Eliminar" class="btn btn-danger float-right" />
				</div>
			</div>
		</form>
    </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </div>


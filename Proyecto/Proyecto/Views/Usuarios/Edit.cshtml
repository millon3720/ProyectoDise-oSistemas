@model Proyecto.Models.Usuarios

@{
    ViewData["Title"] = "Editar Usuario";
}

<h1 class="text-center">Editar Usuario</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Detalles del Usuario</h4>
        <hr />

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="IdUsuario" />

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Cédula:</label>
                <div class="col-sm-8">
                    <input asp-for="Cedula" class="form-control" />
                    <span asp-validation-for="Cedula" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Nombre:</label>
                <div class="col-sm-8">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Apellidos:</label>
                <div class="col-sm-8">
                    <input asp-for="Apellidos" class="form-control" />
                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Teléfono:</label>
                <div class="col-sm-8">
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Correo:</label>
                <div class="col-sm-8">
                    <input asp-for="Correo" class="form-control" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Usuario:</label>
                <div class="col-sm-8">
                    <input asp-for="Usuario" class="form-control" />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Clave:</label>
                <div class="col-sm-8">
                    <input asp-for="Clave" class="form-control" /> <!-- Cambiado a text box -->
                    <span asp-validation-for="Clave" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Puesto:</label>
                <div class="col-sm-8">
                    <input asp-for="Puesto" class="form-control" />
                    <span asp-validation-for="Puesto" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Número de Bodega:</label>
                <div class="col-sm-8">
                    <input asp-for="IdBodega" class="form-control" /> <!-- Cambiado a text box -->
                    <span asp-validation-for="IdBodega" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-12 text-center">
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


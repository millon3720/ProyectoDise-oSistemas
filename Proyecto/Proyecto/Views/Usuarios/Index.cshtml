@model IEnumerable<Proyecto.Models.Usuarios>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    int contador = 0;
    string Rol = HttpContextAccessor.HttpContext.Session.GetString("Puesto");

    ViewData["Title"] = "Index";
}

<h1>Usuarios</h1>
@if (Rol == "Administrador")
{
    <p>
        <a asp-action="Create" class="btn btn-success">Crear Nueva</a>
    </p>
}
<table class="table table-striped table-hover text-center">
    <thead>
        <tr class="table-dark table-primary">
            <th>
                Cedula
            </th>
            <th>
                Nombre
            </th>
            <th>
                Apellidos
            </th>
            <th>
                Telefono
            </th>
            <th>
                Correo
            </th>
            <th>
                Usuario
            </th>
            <th>
                Clave
            </th>
            <th>
                Puesto
            </th>
            <th>
                Numero de bodega
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            @if (contador > 0)
            {
                contador = 0;
                <tr class="table-secondary">
                    <td>
                        @Html.DisplayFor(modelItem => item.Cedula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Clave)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Puesto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdBodega)
                    </td>
                    <td>

                        <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdUsuario">Detalles</a>
                        @if (Rol == "Administrador")
                        {
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdUsuario">Editar</a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdUsuario">Eliminar</a>
                        }
                    </td>

                </tr>
            }
            else
            {
                contador++;
                <tr class="table-light">
                    <td>
                        @Html.DisplayFor(modelItem => item.Cedula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Clave)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Puesto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdBodega)
                    </td>
                    <td>
                        <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdUsuario">Detalles</a>
                        @if (Rol == "Administrador")
                        {
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdUsuario">Editar</a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdUsuario">Eliminar</a>
                        }
                    </td>
                </tr>
            }
        }


    </tbody>
</table>
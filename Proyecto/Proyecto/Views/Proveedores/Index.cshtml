@model IEnumerable<Proyecto.Models.Proveedores>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    int contador = 0;
    string Rol = HttpContextAccessor.HttpContext.Session.GetString("Puesto");

    ViewData["Title"] = "Index";
}
<h1>Proveedores</h1>
@if (Rol == "Administrador")
{
    <p>
        <a asp-action="Create" class="btn btn-success">Crear Nueva</a>
    </p>
}
<table class="table table-striped table-hover">
    <thead>
        <tr class="table-dark table-primary">
            <th>
                Codigo
            </th>
            <th>
                Nombre
            </th>
            <th>
                Correo
            </th>
            <th>
                Telefono 1
            </th>
            <th>
                Telefono 2
            </th>
            <th>
                Provincia
            </th>
            <th>
                Canton
            </th>
            <th>
                Distrito
            </th>
            <th>
                DireccionExacta
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (contador > 0)
            {
                contador = 0;
                <tr class="table-secondary">
                    <td>
                        @Html.DisplayFor(modelItem => item.IdProveedores)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Provincia.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Canton.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Distrito.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DireccionExacta)
                    </td>
                    <td>

                        <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdProveedores">Detalles</a>
                        @if (Rol == "Administrador")
                        {
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdProveedores">Editar</a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdProveedores">Eliminar</a>
                        }
                    </td>

                </tr>
            }
            else
            {
                contador++;
                <tr class="table-light">
                    <td>
                        @Html.DisplayFor(modelItem => item.IdProveedores)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Provincia.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Canton.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Distrito.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DireccionExacta)
                    </td>
                    <td>
                        <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdProveedores">Detalles</a>
                        @if (Rol == "Administrador")
                        {
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdProveedores">Editar</a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdProveedores">Eliminar</a>
                        }
                    </td>
                </tr>
            }
        }
       

    </tbody>
</table>

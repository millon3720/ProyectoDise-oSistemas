@model Proyecto.Models.Proveedores

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Detalles de Proveedor</h4>
        <hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cedula" />

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Correo:</label>
                <div class="col-sm-8">

                    <input asp-for="Correo" class="form-control" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Nombre:</label>
                <div class="col-sm-8">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Telefono:</label>
                <div class="col-sm-8">
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Provincia:</label>
                <div class="col-sm-8">
                    <select asp-for="IdProvincia" class="form-control" asp-items="ViewBag.IdDistrito"></select>
                    <span asp-validation-for="IdProvincia" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Canton:</label>
                <div class="col-sm-8">
                    <select asp-for="IdCanton" class="form-control" asp-items="ViewBag.IdDistrito"></select>
                    <span asp-validation-for="IdCanton" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Distrito:</label>
                <div class="col-sm-8">
                    <select asp-for="IdDistrito" class="form-control" asp-items="ViewBag.IdDistrito"></select>
                    <span asp-validation-for="IdDistrito" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Direccion Exacta:</label>
                <div class="col-sm-8">
                    <input asp-for="DireccionExacta" class="form-control" />
                    <span asp-validation-for="DireccionExacta" class="text-danger"></span>
                </div>
            </div>
      
            <div class="form-group row mb-3">
                <label asp-for="IdProveedores" class="col-sm-4 col-form-label">Agregar Producto</label>
                <div class="col-sm-8">
                    <select asp-for="IdProveedores" class="form-control" asp-items="ViewBag.Nombre">
                        <option value="0">Agregar Producto</option>
                        <option value="1">Atún en lata</option>
                        <option value="2">Melocotones enlatados</option>
                        <option value="3">Maíz enlatado</option>
                        <option value="4">Sardinas en lata</option>


                    </select>
                </div>
            </div>
            <br />
        </form>
    </div>
</div>
<br />
<hr />
<h4 class="card-title">Productos Facturados</h4>
<hr />
<table class="table table-striped table-hover">
    <thead>
        <tr class="table-dark table-primary">
            <th>Código Producto</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Presentación</th>
            <th>Cantidad Presentación</th>
            <th>Tipo Empaque</th>
            <th>Cantidad Empaque</th>
            <th>Precio (₡)</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        <tr class="table-secondary">
            <td>1</td>
            <td>Atún en lata</td>
            <td>Atún en aceite de girasol</td>
            <td>Lata</td>
            <td>1 unidad</td>
            <td>Caja</td>
            <td>12 latas</td>
            <td>2,500</td>
            <td>
                <input type="checkbox" id="checkbox1" name="checkbox1" value="valor1" checked />
            </td>
        </tr>
        <tr class="table-light">
            <td>2</td>
            <td>Melocotones enlatados</td>
            <td>Melocotones en conserva</td>
            <td>Lata</td>
            <td>1 unidad</td>
            <td>Caja</td>
            <td>24 latas</td>
            <td>1,800</td>
            <td>
                <input type="checkbox" id="checkbox2" name="checkbox2" value="valor2" checked />
            </td>
        </tr>
        <tr class="table-secondary">
            <td>3</td>
            <td>Maíz enlatado</td>
            <td>Maíz dulce en conserva</td>
            <td>Lata</td>
            <td>1 unidad</td>
            <td>Caja</td>
            <td>20 latas</td>
            <td>1,600</td>
            <td>
                <input type="checkbox" id="checkbox3" name="checkbox3" value="valor3" checked />
            </td>
        </tr>
        <tr class="table-light">
            <td>4</td>
            <td>Sardinas en lata</td>
            <td>Sardinas en salsa de tomate</td>
            <td>Lata</td>
            <td>1 unidad</td>
            <td>Caja</td>
            <td>10 latas</td>
            <td>2,200</td>
            <td>
                <input type="checkbox" id="checkbox4" name="checkbox4" value="valor4" checked />
            </td>
        </tr>
        <tr class="table-secondary">
            <td>5</td>
            <td>Ensalada de frutas enlatada</td>
            <td>Frutas variadas en almíbar</td>
            <td>Lata</td>
            <td>1 unidad</td>
            <td>Caja</td>
            <td>6 latas</td>
            <td>1,500</td>
            <td>
                <input type="checkbox" id="checkbox5" name="checkbox5" value="valor5" checked />
            </td>
        </tr>
        <tr class="table-light">
            <td>6</td>
            <td>Champiñones enlatados</td>
            <td>Champiñones en conserva</td>
            <td>Lata</td>
            <td>1 unidad</td>
            <td>Caja</td>
            <td>15 latas</td>
            <td>2,000</td>
            <td>
                <input type="checkbox" id="checkbox6" name="checkbox6" value="valor6" checked />
            </td>
        </tr>
    </tbody>
</table>


<div class="mt-3">
    <button type="submit" class="btn btn-primary">Crear Producto</button> |
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model Proyecto.Models.Proveedores

@{
    ViewData["Title"] = "Edit";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Detalles de Proveedor</h4>
        <hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cedula" />

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Correo:</label>
                <div class="col-sm-8">

                    <input asp-for="Correo" class="form-control" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Nombre:</label>
                <div class="col-sm-8">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Telefono:</label>
                <div class="col-sm-8">
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Provincia:</label>
                <div class="col-sm-8">
                    <select asp-for="IdProvincia" class="form-control" asp-items="ViewBag.IdDistrito"></select>
                    <span asp-validation-for="IdProvincia" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Canton:</label>
                <div class="col-sm-8">
                    <select asp-for="IdCanton" class="form-control" asp-items="ViewBag.IdDistrito"></select>
                    <span asp-validation-for="IdCanton" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Distrito:</label>
                <div class="col-sm-8">
                    <select asp-for="IdDistrito" class="form-control" asp-items="ViewBag.IdDistrito"></select>
                    <span asp-validation-for="IdDistrito" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Direccion Exacta:</label>
                <div class="col-sm-8">
                    <input asp-for="DireccionExacta" class="form-control" />
                    <span asp-validation-for="DireccionExacta" class="text-danger"></span>
                </div>
            </div>

        </form>

    </div>
</div>


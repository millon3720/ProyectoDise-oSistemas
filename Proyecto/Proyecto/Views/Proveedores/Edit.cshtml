@model Proyecto.Models.ProveedorEditViewModel
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    string Rol = HttpContextAccessor.HttpContext.Session.GetString("Puesto");
    int contador = 0;
    ViewData["Title"] = "Edit";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Detalles de Proveedor</h4>
        <hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Proveedor.IdProveedores" />
            
            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Codigo:</label>
                <div class="col-sm-8">

                    <input asp-for="Proveedor.IdProveedores" class="form-control" readonly  />
                    <span asp-validation-for="Proveedor.IdProveedores" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Nombre:</label>
                <div class="col-sm-8">

                    <input asp-for="Proveedor.Nombre" class="form-control" />
                    <span asp-validation-for="Proveedor.Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Nombre:</label>
                <div class="col-sm-8">
                    <input asp-for="Proveedor.Correo" class="form-control" />
                    <span asp-validation-for="Proveedor.Correo" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Telefono 1:</label>
                <div class="col-sm-8">
                    <input asp-for="Proveedor.Telefono1" class="form-control"  />
                    <span asp-validation-for="Proveedor.Telefono1" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Telefono 2:</label>
                <div class="col-sm-8">
                    <input asp-for="Proveedor.Telefono2" class="form-control"  />
                    <span asp-validation-for="Proveedor.Telefono2" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Provincia:</label>
                <div class="col-sm-8">
                    <select class="form-control" id="provincias">
                        @foreach (var item in Model.Provincias)
                        {
                            @if (item.IdProvincia==Model.Proveedor.IdProvincia)
                            {
                                <option value="@item.IdProvincia" selected>@item.Nombre</option>
                            }
                            else
                            {
                                <option value="@item.IdProvincia">@item.Nombre</option>
                            }
                        }
                       
                    </select>
                    <span asp-validation-for="Proveedor.IdProvincia" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Canton:</label>
                <div class="col-sm-8">
                    <select class="form-control" id="cantonesAlajuela">
                        @foreach (var item in Model.Cantones)
                        {
                            @if (item.IdCanton == Model.Proveedor.IdCanton)
                            {
                                <option value="@item.IdCanton" selected>@item.Nombre</option>
                            }
                            else
                            {
                                <option value="@item.IdCanton">@item.Nombre</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="Proveedor.IdCanton" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Distrito:</label>
                <div class="col-sm-8">
                    <select class="form-control" id="distritosCR">
                        @foreach (var item in Model.Distritos)
                        {
                            @if (item.IdDistrito == Model.Proveedor.IdDistrito)
                            {
                                <option value="@item.IdDistrito" selected>@item.Nombre</option>
                            }
                            else
                            {
                                <option value="@item.IdDistrito">@item.Nombre</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="Proveedor.IdDistrito" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Direccion Exacta:</label>
                <div class="col-sm-8">
                    <input asp-for="Proveedor.DireccionExacta" class="form-control"/>
                    <span asp-validation-for="Proveedor.DireccionExacta" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Distrito:</label>
                <div class="col-sm-8">
                    <select class="form-control" id="distritosCR">
                        <option value="" selected>Agregar Producto</option>
                        @foreach (var item in Model.Productos)
                        {
                            <option value="@item.IdProductos">@item.Nombre</option>
                        }
                    </select>
                    <span asp-validation-for="Productos" class="text-danger"></span>
                </div>
            </div>
          
        </form>

    </div>
</div>

<br />
<hr />
<h4 class="card-title">Productos de Proveedor</h4>
<hr />
<table class="table table-striped table-hover">
    <thead>
        <tr class="table-dark table-primary">
            <th>Código Producto</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Presentación</th>
            <th>Cantidad Presentación</th>
            <th>Tipo Empaque</th>
            <th>Cantidad Empaque</th>
            <th>Precio (₡)</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProductosProveedor)
        {
            @if (contador > 0)
            {
                contador = 0;
                <tr class="table-secondary">
                    <td>@item.IdProductos</td>
                    <td>@item.Nombre</td>
                    <td>@item.Descripcion</td>
                    <td>@item.Presentacion</td>
                    <td>@item.CantidadPresentacion</td>
                    <td>@item.TipoEmpaque</td>
                    <td>@item.CantidadEmpaque</td>
                    <td>@item.Precio</td>
                    <td>
                        <input type="checkbox" id="@item.IdProductos" name="@item.Nombre" value="@item.IdProductos" checked />
                    </td>
                </tr>
            }
            else
            {
                contador++;
                <tr class="table-light">
                    <td>@item.IdProductos</td>
                    <td>@item.Nombre</td>
                    <td>@item.Descripcion</td>
                    <td>@item.Presentacion</td>
                    <td>@item.CantidadPresentacion</td>
                    <td>@item.TipoEmpaque</td>
                    <td>@item.CantidadEmpaque</td>
                    <td>@item.Precio</td>
                    <td>
                        <input type="checkbox" id="@item.IdProductos" name="@item.Nombre" value="@item.IdProductos" checked />
                    </td>
                </tr>
            }
        
        }
       
    </tbody>
</table>

<br />

<div class="form-group row">
    <div class="col-sm-12">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button> |
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
